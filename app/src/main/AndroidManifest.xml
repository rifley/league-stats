<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.leaguestats">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.AboutActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.leaguestats.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.ContactActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.leaguestats.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.BackpackActivity" />
        <activity android:name=".ui.AddChampionActivity" />
        <activity android:name=".ui.SummonerActivity" />
        <activity android:name=".ui.ChampionDetailActivity" />
        <activity android:name=".ui.LoadingActivity" />
        <activity android:name=".ui.CreateAccountActivity" />
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.SavedChampionListActivity" />
    </application>

</manifest>