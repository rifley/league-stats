<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.leaguestats.ui.ChampionDetailFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/leagueTeal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/championImageView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitCenter"
            android:src="@drawable/backpack" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@android:color/white"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/championNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Champion Name"
                android:textAlignment="center"
                android:textColor="@color/leagueYellowPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/champTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Champion Title"
                android:textColor="@color/leagueBlack"
                android:textStyle="italic"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:layout_marginTop="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/BaseHealthTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Base Health"
                    android:textColor="@color/leagueBlack"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/BaseArmorTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Base Armor"
                    android:textColor="@color/leagueBlack"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/BaseMagicResistTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:text="Base Magic Resist"
                    android:textColor="@color/leagueBlack"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
