<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="367dp"
        android:layout_height="110dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="9dp">

        <ImageView
            android:id="@+id/restaurantImageView"
            android:layout_width="101dp"
            android:layout_height="88dp"
            android:scaleType="centerCrop"
            android:src="@drawable/backpack"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/championNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Champion Name"
            android:textColor="@color/leagueYellowPrimary"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="10dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/restaurantImageView"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/championTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Champion Title"
            android:textStyle="italic"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/championNameTextView"
            android:layout_marginRight="82dp"
            app:layout_constraintRight_toRightOf="parent" />


        <TextView
            android:id="@+id/viewStatsTextView"
            android:layout_width="86dp"
            android:layout_height="20dp"
            android:text="View Stats"
            android:textColor="@color/leagueTeal"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/winLaneTextView" />

        <TextView
            android:id="@+id/winLaneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Win Lane"
            android:textColor="@color/leagueTeal"
            tools:layout_conversion_absoluteX="317dp"
            tools:layout_conversion_absoluteY="150dp"
            tools:layout_conversion_absoluteWidth="56dp"
            tools:layout_conversion_absoluteHeight="16dp"
            app:layout_constraintLeft_toRightOf="@+id/restaurantImageView"
            android:layout_marginLeft="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="11dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>