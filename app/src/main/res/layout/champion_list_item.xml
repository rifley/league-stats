<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="100dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/championNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Champion Name"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/championImageView"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.034" />

        <TextView
            android:id="@+id/championTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Champion Title"
            android:textStyle="italic"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/championNameTextView"
            android:layout_marginRight="90dp"
            app:layout_constraintRight_toRightOf="parent" />


        <TextView
            android:id="@+id/viewStatsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Stats"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/championImageView"
            android:layout_width="132dp"
            android:layout_height="116dp"
            android:scaleType="centerCrop"
            android:src="@drawable/backpack"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent" />

    </android.support.constraint.ConstraintLayout>


</LinearLayout>